<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <!---Стиль иконок-->
    <style name="icon">
        <item name="android:layout_width">@dimen/size_small_24</item>
        <item name="android:layout_height">@dimen/size_small_24</item>
    </style>
    <style name="icon.left" parent="icon">
        <item name="android:layout_gravity">top|left</item>
        <item name="android:layout_marginTop">@dimen/size_small_24</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal_16</item>
    </style>
    <style name="icon.right" parent="icon">
        <item name="android:layout_gravity">top|right</item>
        <item name="android:layout_marginTop">@dimen/spacing_medial_24</item>
        <item name="android:layout_marginRight">@dimen/spacing_medium_32</item>
    </style>

    <!--Стиль юзербара-->
    <style name="user_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">@dimen/spacing_medial_24</item>
        <item name="android:paddingBottom">@dimen/spacing_medial_24</item>
    </style>

    <!--Контейнер статистики-->
    <style name="container">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--Текст в юзербаре-->
    <style name="text_user_bar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <!--Текст значений-->
    <style name="text_user_bar.value" parent="text_user_bar">
        <item name="android:textSize">@dimen/font_larger_24</item>
    </style>
    <!--Текст имён-->
    <style name="text_user_bar.name">
        <item name="android:textSize">@dimen/font_normal_12</item>
    </style>
    <!--Разделитель юзербара-->
    <style name="line_user_bar">
        <item name="android:layout_width">@dimen/line_size</item>
        <item name="android:layout_height">@dimen/size_medium_56</item>
        <item name="android:background">@color/grey_light</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!--Контейнер инфобара-->
    <style name="info_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/spacing_small_8</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small_8</item>
    </style>

    <!--Блок инфобара-->
    <style name="block_info">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/size_large_72</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_marginLeft">@dimen/spacing_medium_32</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal_16</item>
    </style>

    <!--Информация-->
    <style name="information">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:enabled">false</item>
        <item name="android:focusable">false</item>
    </style>

    <!--Разделительная линия-->
    <style name="separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_size</item>
        <item name="android:layout_marginLeft">@dimen/spacing_larger_72</item>
        <item name="android:background">@color/grey_light</item>
    </style>
</resources>